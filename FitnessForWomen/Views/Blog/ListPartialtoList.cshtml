@model IEnumerable<FitnessForWomen.Models.Blog>

@{
    Layout = null;
}

<section class="blog py-5">
    <div class="container py-md-5 py-3">
        <h4 class="heading text-center">Sağlık Merkezi</h4>
        <h3 class="heading text-center mb-5">Blog Yazıları</h3>
        <div class="row blog-grids">
            @foreach (var item in Model)
            {

                <div class="col-lg-7 mb-lg-5 blog-img1">

                    <img src="~/Content/web/images/blog1.jpg" alt="" class="img-fluid" />
                </div>

                <div class="col-lg-5 mb-5">




                    <h4 class="my-3">@item.Baslık</h4>
                    <p class="my-3">
                        @item.İcerik
                    </p>
                </div>
            }

            @*<a href="single.html" class="btn-banner"> View Post </a>*@


        </div>
    </div>
</section>

